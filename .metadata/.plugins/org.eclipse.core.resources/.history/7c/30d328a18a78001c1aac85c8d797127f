
public class BarLoops {
	public static void main(String[] args) {
		
		// to do: turn these into class constants, rather than variables
		int reps = 2;		// set repetitions (outer loop)
		int range = 9;		// set length of string (inner loop)
		
		public static final int REPS = 2;	// set repetitions (outer loop)
		public static final int RANGE = 9;	// set length of string (inner loop)
		
		String bars = "";
		String numbers = "";
		
		for (int i = 1; i <= REPS; i++) {
			for (int k = 1; k <= RANGE; k++) {
				numbers += k;
				bars += " ";
			}
			bars += "|";
			numbers += '0';
		}
		System.out.println(bars);
		System.out.println(numbers);
	}
}