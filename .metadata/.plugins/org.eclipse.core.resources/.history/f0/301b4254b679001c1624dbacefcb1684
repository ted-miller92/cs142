
public class UsefulMathMethods {
	public static void main(String[] args) {
		System.out.println("The absolute value of -10 is " + Math.abs(-10));
		System.out.println("3.1 rounded upward is " + Math.ceil(3.1));
		System.out.println("The cosine (in radians) of pi is " + Math.cos(Math.PI));
		System.out.println("Logarithm (base e) of 1000 is " + Math.log(1000));
		System.out.println("Logarithm (base 10) of 1000 is " + Math.log10(1000));
		System.out.println("Pi radians in degrees is " + Math.toDegrees(Math.PI));
		System.out.println("270 degrees in radians is + " + Math.toRadians(270.0));
	}
}
